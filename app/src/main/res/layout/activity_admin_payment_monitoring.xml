<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:background="#F8F9FA"
    tools:context=".AdminClass.AdminPaymentMonitoringActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payment Tracking"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:textSize="20sp"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/btnExport"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_download"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:clickable="true"
            android:contentDescription="Export report" />

    </LinearLayout>

    <!-- Payment Statistics -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Total Revenue Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Revenue"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalRevenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₱1,256,890.00"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#059669"
                    android:layout_marginBottom="8dp" />



            </LinearLayout>

            <!-- Payment Method Stats Row 1 (GCash only) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- GCash Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_gcash" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="GCash"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvGcashAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="₱458,900"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvGcashCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="89 transactions"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Payment Method Stats Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- COD Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="1dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_cod"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash on Delivery"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCodAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₱289,640"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCodCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="54 transactions"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF" />

                </LinearLayout>

                <!-- Bank Transfer Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="1dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_bank"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Transfer"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvBankAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₱166,200"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvBankCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="32 transactions"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="1dp">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#F3F4F6"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSearchPayment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search by Order ID or Reference"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:inputType="text"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFilterAllPayments"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2563EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterGcash"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="GCash"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterCod"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="COD"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterBank"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Bank"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Payment List Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvPaymentCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recent Payments (242)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <Spinner
            android:id="@+id/spinnerDateRange"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="#F3F4F6"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:entries="@array/date_range_options" />

    </LinearLayout>

    <!-- Payments RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPayments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_payments"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Payments Found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are no payment records matching your criteria"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>
