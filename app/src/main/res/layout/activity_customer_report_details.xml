<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:paddingTop="30dp"
    tools:context=".CustomerClass.CustomerReportDetailsActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1F2937" />

            <TextView
                android:id="@+id/tvComplaintIDHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint #12345"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvHeaderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#F59E0B"
            android:background="#FEF3C7"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <ImageView
            android:id="@+id/btnMoreOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:clickable="true"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- ScrollView for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Status Progress Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complaint Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="16dp" />

                <!-- Progress Timeline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Step 1: Submitted -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivStatusStep1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_check_circle"
                            android:tint="#059669"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submitted"
                            android:textSize="10sp"
                            android:textColor="#059669"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <!-- Connector Line 1-2 -->
                    <View
                        android:id="@+id/lineStep1to2"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:background="#059669"
                        android:layout_marginBottom="20dp" />

                    <!-- Step 2: In Review -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivStatusStep2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_pending"
                            android:tint="#F59E0B"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Review"
                            android:textSize="10sp"
                            android:textColor="#F59E0B"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <!-- Connector Line 2-3 -->
                    <View
                        android:id="@+id/lineStep2to3"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="0.5"
                        android:background="#D1D5DB"
                        android:layout_marginBottom="20dp" />

                    <!-- Step 3: Resolved -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivStatusStep3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_circle_outline"
                            android:tint="#9CA3AF"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resolved"
                            android:textSize="10sp"
                            android:textColor="#9CA3AF"
                            android:textAlignment="center" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <!-- Status Update Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_info"
                        android:tint="#6B7280"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvStatusUpdateInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last updated 2 hours ago"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                </LinearLayout>

            </LinearLayout>

            <!-- Complaint Message Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Complaint"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvComplaintMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I haven't received my order yet despite the tracking showing it was delivered. Please help me resolve this issue."
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:lineSpacingExtra="3dp"
                    android:background="#F9FAFB"
                    android:padding="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Related Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Order ID -->
                    <LinearLayout
                        android:id="@+id/layoutOrderInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_shopping_bag"
                            android:tint="#2563EB"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Related Order"
                                android:textSize="11sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/tvOrderID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order #ORD12345"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Product ID -->
                    <LinearLayout
                        android:id="@+id/layoutProductInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_product"
                            android:tint="#6B7280"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Related Product"
                                android:textSize="11sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/tvProductID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product ID: PRD98765"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Support Response Section -->
            <LinearLayout
                android:id="@+id/layoutSupportResponseCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_support"
                        android:background="@drawable/bg_circle_blue"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Support Team Response"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:id="@+id/tvRepliedBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Replied by: CSR John Doe"
                            android:textSize="11sp"
                            android:textColor="#6B7280" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivNewResponseIndicator"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/bg_unread_dot"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Response Message -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#EFF6FF"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvSupportResponse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thank you for reaching out. We have reviewed your complaint and are working on resolving this issue. We will update you within 24 hours."
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:id="@+id/tvResponseTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Replied 2 hours ago"
                        android:textSize="11sp"
                        android:textColor="#6B7280"
                        android:gravity="end"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Conversation Section -->
            <LinearLayout
                android:id="@+id/layoutConversationSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Conversation History"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:id="@+id/tvMessageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 messages"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                </LinearLayout>

                <!-- Recent Messages Preview -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:maxHeight="200dp" />

                <!-- View All Button -->
                <Button
                    android:id="@+id/btnViewAllMessages"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="View Full Conversation"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginTop="8dp"
                    style="?android:attr/borderlessButtonStyle" />

            </LinearLayout>

            <!-- Timestamp Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_clock"
                    android:tint="#9CA3AF"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvCreatedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created: Aug 04, 2025 - 3:45 PM"
                    android:textSize="11sp"
                    android:textColor="#9CA3AF" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnViewOrder"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="View Order"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2563EB"
            android:backgroundTint="#EFF6FF"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_shopping_bag"
            android:drawableTint="#2563EB"
            android:drawablePadding="6dp" />

        <Button
            android:id="@+id/btnAddMessage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Add Message"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_message"
            android:drawableTint="#FFFFFF"
            android:drawablePadding="6dp" />

    </LinearLayout>

</LinearLayout>
