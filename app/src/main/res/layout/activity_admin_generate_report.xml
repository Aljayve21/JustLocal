<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generate Report"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1F2937"
                android:layout_marginStart="12dp" />

            <ImageView
                android:id="@+id/btnHelp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                app:tint="#6B7280" />

        </LinearLayout>

        <!-- Filters Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_margin="12dp"
            android:elevation="1dp">

            <!-- Date Range -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date range"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:id="@+id/layoutDateRange"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#F3F4F6"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#6B7280"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvDateRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select date range"
                    android:textSize="14sp"
                    android:textColor="#1F2937" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_expand_more"
                    app:tint="#6B7280" />

            </LinearLayout>

            <!-- Entity Type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report type"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="6dp" />

            <Spinner
                android:id="@+id/spinnerReportType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F3F4F6"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:entries="@array/admin_report_types"
                android:layout_marginBottom="12dp" />

            <!-- Quick Filters Row (optional minimal) -->
            <LinearLayout
                android:id="@+id/layoutQuickFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnThisWeek"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="This Week"
                    android:textSize="12sp"
                    android:textColor="#2563EB"
                    android:backgroundTint="#EFF6FF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnThisMonth"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="This Month"
                    android:textSize="12sp"
                    android:textColor="#2563EB"
                    android:backgroundTint="#EFF6FF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnCustom"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Custom"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#F3F4F6" />

            </LinearLayout>

        </LinearLayout>

        <!-- Metrics Preview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary preview"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="8dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Orders"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvTotalOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Revenue"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complaints"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvComplaints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolved Rate"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvResolvedRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Export Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnPreview"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Preview"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2563EB"
                android:backgroundTint="#EFF6FF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnExportCSV"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Export CSV"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2563EB"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnExportPDF"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Export PDF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#111827" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
