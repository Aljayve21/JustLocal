<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:background="#F8F9FA"
    tools:context=".AdminClass.AdminOrderMonitoringActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Monitoring"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:textSize="20sp"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:clickable="true"
            android:contentDescription="Refresh orders" />

    </LinearLayout>

    <!-- Statistics Dashboard -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Cards Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Total Orders Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Orders"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTotalOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="156"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

                <!-- Pending Orders Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPendingOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#F59E0B" />

                </LinearLayout>

            </LinearLayout>

            <!-- Stats Cards Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Processing Orders Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Processing"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvProcessingOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB" />

                </LinearLayout>

                <!-- Completed Orders Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCompletedOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="88"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#059669" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Search and Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="1dp">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#F3F4F6"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp"
                android:contentDescription="Search icon" />

            <EditText
                android:id="@+id/etSearchOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search by Order ID, Customer, or Seller"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:inputType="text"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <!-- Filter Buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2563EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterPending"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Pending"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterProcessing"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Processing"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Out for Delivery"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Completed"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Orders List Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvOrderCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Orders (156)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <Spinner
            android:id="@+id/spinnerSortBy"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="#F3F4F6"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:entries="@array/sort_options" />

    </LinearLayout>

    <!-- Orders RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_orders"
            android:layout_marginBottom="16dp"
            android:contentDescription="No orders" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Orders Found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are no orders matching your criteria"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>