<?xml version="1.0" encoding="utf-8"?>
<!-- item_support_ticket.xml - Place in res/layout/ -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:elevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Ticket Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#F9FAFB">

        <!-- Priority Indicator -->
        <View
            android:id="@+id/viewPriorityIndicator"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:background="#DC2626"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvTicketID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket #12345"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937" />

                <TextView
                    android:id="@+id/tvPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIGH"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#DC2626"
                    android:background="#FEE2E2"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTicketDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 04, 2025 - 3:45 PM"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTicketStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#DC2626"
            android:background="#FEE2E2"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

    </LinearLayout>

    <!-- Ticket Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/ivCategoryIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_category"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category:"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Issue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1F2937" />

        </LinearLayout>

        <!-- Subject -->
        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problem with order delivery tracking"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp" />

        <!-- Description Preview -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I haven't received updates on my order delivery status for the past 3 days..."
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer:"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1F2937" />

        </LinearLayout>

        <!-- Order Reference (if applicable) -->
        <LinearLayout
            android:id="@+id/layoutOrderReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_shopping_bag"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Related Order:"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tvOrderReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#12345"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2563EB" />

        </LinearLayout>

        <!-- Assigned CSR -->
        <LinearLayout
            android:id="@+id/layoutAssignedCSR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EFF6FF"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_csr_avatar"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assigned to:"
                    android:textSize="11sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tvAssignedCSR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Maria Santos"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvLastResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="12dp" />

        <!-- Response Time & Messages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvResponseTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Response time: 1.5h"
                android:textSize="12sp"
                android:textColor="#6B7280" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_message"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/tvMessageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 messages"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#F9FAFB">

        <Button
            android:id="@+id/btnViewTicket"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="View Details"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2563EB"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="8dp"
            style="?android:attr/borderlessButtonStyle" />

<!--        <Button-->
<!--            android:id="@+id/btnTakeTicket"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_weight="1"-->
<!--            android:text="Take Ticket"-->
<!--            android:textSize="14sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:backgroundTint="#2563EB"-->
<!--            android:layout_marginStart="8dp" />-->

    </LinearLayout>

</LinearLayout>