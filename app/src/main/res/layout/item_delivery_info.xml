<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="2dp"
    android:paddingEnd="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <!-- Timeline line: can be continuous/conditional via adapter -->
    <View
        android:id="@+id/viewLineTop"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:layout_alignStart="@+id/viewTimelineDot"
        android:layout_alignLeft="@+id/viewTimelineDot"
        android:layout_above="@+id/viewTimelineDot"
        android:layout_centerHorizontal="true"
        android:background="#E5E7EB"
        android:visibility="visible"/>

    <!-- Timeline dot/indicator -->
    <View
        android:id="@+id/viewTimelineDot"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/timeline_dot_filled" />

    <!-- Timeline line bottom part -->
    <View
        android:id="@+id/viewLineBottom"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewTimelineDot"
        android:layout_alignStart="@+id/viewTimelineDot"
        android:layout_alignLeft="@+id/viewTimelineDot"
        android:layout_centerHorizontal="true"
        android:background="#E5E7EB"
        android:visibility="visible"/>

    <!-- Timeline Event Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/viewTimelineDot"
        android:layout_toRightOf="@id/viewTimelineDot"
        android:layout_alignTop="@id/viewTimelineDot"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvDeliveryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDeliveryDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-07-27 16:30"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDeliveryCarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rider: John (Grab Express)"
            android:textColor="#4B5563"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
