<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:paddingTop="30dp"
    tools:context=".CSRClass.CSRTicketDetailsActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvTicketIDHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket #12345"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2937" />

            <TextView
                android:id="@+id/tvTicketCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Issue"
                android:textSize="11sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTicketStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#DC2626"
            android:background="#FEE2E2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

    </LinearLayout>

    <!-- ScrollView Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:layout_above="@id/layoutActionButtons"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Customer Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Information"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_person"
                            app:tint="#6B7280"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Juan Dela Cruz"
                            android:textSize="14sp"
                            android:textColor="#1F2937" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_email"
                            app:tint="#6B7280"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tvCustomerID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Customer ID: CUST12345"
                            android:textSize="13sp"
                            android:textColor="#6B7280" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Complaint Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complaint Details"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvComplaintMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I haven't received my order yet despite the tracking showing it was delivered. This is very frustrating."
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:lineSpacingExtra="3dp"
                        android:background="#F9FAFB"
                        android:padding="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Order Reference -->
                    <LinearLayout
                        android:id="@+id/layoutOrderReference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_shopping_bag"
                            app:tint="#2563EB"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Related Order"
                                android:textSize="11sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/tvOrderID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order #ORD12345"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#2563EB" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Product Reference -->
                    <LinearLayout
                        android:id="@+id/layoutProductReference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_product"
                            app:tint="#6B7280"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Related Product"
                                android:textSize="11sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/tvProductID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product ID: PRD98765"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Timestamp -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_clock"
                            android:layout_marginEnd="6dp"
                            app:tint="#9CA3AF" />

                        <TextView
                            android:id="@+id/tvCreatedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Created: Aug 04, 2025 - 3:45 PM"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Conversation Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Conversation"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937" />

                        <TextView
                            android:id="@+id/tvMessageCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 messages"
                            android:textSize="11sp"
                            android:textColor="#6B7280" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvConversationPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:maxHeight="200dp" />

                    <Button
                        android:id="@+id/btnViewFullConversation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="View Full Conversation"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginTop="8dp"
                        style="?android:attr/borderlessButtonStyle" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutActionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnViewOrder"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="View Order"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2563EB"
            android:backgroundTint="#EFF6FF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnRespondTicket"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Respond"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>
