<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:paddingTop="30dp"
    tools:context=".CSRClass.CSRSupportTicketActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Support Tickets"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_refresh"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:clickable="true"
            android:contentDescription="Refresh tickets" />

    </LinearLayout>

    <!-- Ticket Statistics -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Total Tickets -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Tickets"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTotalTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="147"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>

                <!-- Open Tickets -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvOpenTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#DC2626" />

                </LinearLayout>

            </LinearLayout>

            <!-- Stats Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- In Progress -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In Progress"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvInProgressTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#F59E0B" />

                </LinearLayout>

                <!-- Resolved -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp"
                    android:layout_marginStart="6dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resolved"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvResolvedTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#059669" />

                </LinearLayout>

            </LinearLayout>

            <!-- Response Time Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="1dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_clock"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average Response Time"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tvAvgResponseTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.5 hours"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Search and Filter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="1dp">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#F3F4F6"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSearchTicket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search by Ticket ID, Customer, or Issue"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:inputType="text"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2563EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Open"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterInProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="In Progress"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterResolved"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Resolved"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnFilterClosed"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Closed"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:backgroundTint="#E5E7EB"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Ticket List Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTicketCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Tickets (147)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937" />

        <Spinner
            android:id="@+id/spinnerSortBy"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="#F3F4F6"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:entries="@array/ticket_sort_options" />

    </LinearLayout>

    <!-- Tickets RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTickets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_tickets"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Tickets Found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are no support tickets matching your criteria"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>