<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:paddingStart="8dp"
    android:paddingEnd="60dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="#EFF6FF">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_support"
            android:tint="#2563EB"
            android:padding="6dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support Team"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#2563EB"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_message_support"
            android:padding="12dp"
            android:elevation="1dp">

            <TextView
                android:id="@+id/tvSupportMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is support response"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/tvRepliedByName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- John Doe"
                android:textSize="11sp"
                android:textStyle="italic"
                android:textColor="#6B7280"
                android:layout_marginTop="6dp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSupportMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:15 PM"
            android:textSize="10sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>
