<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="3dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:background="#F3F4F6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #12345"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2937" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="14sp"
                android:textColor="#4B5563"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAddressSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 Main St, City"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="14sp"
                android:textColor="#4B5563"
                android:layout_marginTop="2dp" />

            <!-- Status with indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/viewStatusIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/status_indicator_pending" />

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Pending"
                    android:textSize="14sp"
                    android:textColor="#059669"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±22,999.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1F2937" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
