<?xml version="1.0" encoding="utf-8"?>
<!-- item_customer_report.xml - Place in res/layout/ -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginBottom="12dp"
    android:elevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Report Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#F9FAFB">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pending"
            android:padding="8dp"
            android:background="@drawable/bg_status_circle"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReportID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report #12345"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug 04, 2025 - 3:45 PM"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvReportStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#F59E0B"
            android:background="#FEF3C7"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

    </LinearLayout>

    <!-- Report Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Report Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_category"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvReportType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Issue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2563EB"
                android:background="#EFF6FF"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Subject -->
        <TextView
            android:id="@+id/tvReportSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problem with delivery tracking"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp" />

        <!-- Description Preview -->
        <TextView
            android:id="@+id/tvReportDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I haven't received updates on my order delivery status..."
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Related Order (if applicable) -->
        <LinearLayout
            android:id="@+id/layoutRelatedOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F9FAFB"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_shopping_bag"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Related Order"
                    android:textSize="11sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tvRelatedOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order #12345"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Order"
                android:textSize="12sp"
                android:textColor="#2563EB"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Response Info -->
        <LinearLayout
            android:id="@+id/layoutResponseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EFF6FF"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_csr_avatar"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Support Response"
                    android:textSize="11sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/tvLastResponse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CSR team replied 2 hours ago"
                    android:textSize="13sp"
                    android:textColor="#1F2937" />

            </LinearLayout>

            <View
                android:id="@+id/viewUnreadIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_unread_dot"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Timeline Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvCreatedTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Created 2 days ago"
                android:textSize="12sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/tvUpdatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated 5h ago"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnViewReport"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="View Details"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2563EB"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btnAddMessage"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Add Message"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2563EB"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>