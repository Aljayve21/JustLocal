<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:paddingTop="30dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Complaint #CMP-12345"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1F2937"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tvHeaderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#DC2626"
            android:background="#FEE2E2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

    </LinearLayout>

    <!-- Meta strip -->
    <LinearLayout
        android:id="@+id/layoutMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="1dp">

        <TextView
            android:id="@+id/tvCustomerID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Customer: CUST12345"
            android:textSize="12sp"
            android:textColor="#6B7280" />

        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: ORD12345"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tvProductID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product: PRD98765"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Messages list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutMeta"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

    <!-- Footer info (timestamps) -->
    <LinearLayout
        android:id="@+id/layoutFooterInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: Aug 04, 2025 - 3:45 PM"
            android:textSize="11sp"
            android:textColor="#9CA3AF" />

    </LinearLayout>

</RelativeLayout>
