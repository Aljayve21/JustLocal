<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:paddingTop="30dp"
    tools:context=".CSRClass.CSRRespondTicketActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvTicketIDHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket #12345"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1F2937" />

            <TextView
                android:id="@+id/tvCustomerNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                android:textSize="11sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Progress"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#F59E0B"
            android:background="#FEF3C7"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

    </LinearLayout>

    <!-- EMPTY STATE -->
    <LinearLayout
        android:id="@+id/layoutEmptyMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/layoutHeader"
        android:layout_above="@+id/layoutResponseInput"
        android:padding="24dp"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_chat"
            app:tint="#9CA3AF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No conversation yet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:layout_marginBottom="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start the conversation by sending a message"
            android:textSize="14sp"
            android:textColor="#9CA3AF"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCsrMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:layout_above="@id/layoutResponseInput"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

    <!-- Response Input Section -->
    <LinearLayout
        android:id="@+id/layoutResponseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="12dp"
        android:layout_alignParentBottom="true">

        <!-- Quick Actions Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnMarkResolved"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Mark Resolved"
                android:textSize="12sp"
                android:textColor="#059669"
                android:backgroundTint="#D1FAE5"
                android:layout_marginEnd="8dp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnEscalate"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Escalate"
                android:textSize="12sp"
                android:textColor="#DC2626"
                android:backgroundTint="#FEE2E2"
                android:layout_marginStart="8dp"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <!-- Character Count -->
        <TextView
            android:id="@+id/tvCharacterCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/500"
            android:textSize="11sp"
            android:textColor="#9CA3AF"
            android:gravity="end"
            android:layout_marginBottom="8dp" />

        <!-- Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#F3F4F6"
                app:cardElevation="0dp"
                app:cardCornerRadius="24dp">

                <EditText
                    android:id="@+id/etResponseInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Type your response..."
                    android:textSize="14sp"
                    android:textColor="#1F2937"
                    android:textColorHint="#9CA3AF"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="4"
                    android:maxLength="500"
                    android:minHeight="48dp"
                    android:gravity="top|start"
                    android:padding="14dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="#2563EB"
                app:cardElevation="2dp"
                app:cardCornerRadius="24dp">

                <ImageView
                    android:id="@+id/btnSendResponse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_send"
                    app:tint="#FFFFFF"
                    android:padding="12dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Quick Response Templates -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTemplate1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Checking now"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:chipBackgroundColor="#F3F4F6"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="16dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTemplate2"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Will update soon"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:chipBackgroundColor="#F3F4F6"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="16dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTemplate3"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Issue resolved"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    app:chipBackgroundColor="#F3F4F6"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="16dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</RelativeLayout>
